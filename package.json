{
  "name": "umbrella-app",
  "version": "1.0.0",
  "description": "Example umbrella app arch on express",
  "main": "index.js",
  "scripts": {
    "buld": "tsc",
    "start:dev": "dotenv -e .env.dev tsc --watch & nodemon ./dist/index.js",
    "start:prod": "dotenv -e .env.prod tsc & node ./dist/index.js",
    "test:watch": "npm run env:test -- jest --watch",
    "test:debug": "dotenv -e ./.env.test",
    "format:lint": "",
    "format:pretty": "",
    "credentials:init": "npx node-credentials init --path ./src/environment/production.json",
    "credentials:encrypt": "npx node-credentials encrypt --path ./src/environment/production.json",
    "credentials:decrypt": "npx node-credentials decrypt --path ./src/environment/production.json",
    "credentials:edit": "EDITOR=nano npx node-credentials edit"
  },
  "prisma": {
    "schema": [
      "src/core/database/database.prisma"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-validator": "^3.0.0",
    "@types/node": "^16.6.2",
    "@types/redis": "^2.8.32",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.1",
    "faker": "^5.5.3",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "prisma": "^2.30.3",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@prisma/client": "^2.30.3",
    "cors": "^2.8.5",
    "dotenv-cli": "^4.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "helmet": "^4.6.0",
    "log4js": "^6.3.0",
    "node-credentials": "^1.3.1",
    "pm2": "^5.1.2",
    "redis": "^3.1.2"
  }
}
